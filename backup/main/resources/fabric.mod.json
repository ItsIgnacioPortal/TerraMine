{
  "schemaVersion": 1,
  "id": "artifacts",
  "version": "${version}",

  "name": "TerraCraft",
  "description": "Terraria in Minecraft, adds most of everything from terraria into minecraft in an accurate way",
  "authors": [
    "Jakeb"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/artifacts",
    "sources": "https://github.com/florensie/artifacts",
    "issues": "https://github.com/florensie/artifacts/issues"
  },
  "license": "LGPL-3.0-or-later",
  "icon": "assets/artifacts/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "artifacts.Artifacts"
    ],
    "terrablender": [
      "artifacts.Artifacts"
    ],
    "client": [
      "artifacts.ArtifactsClient"
    ],
    "artifacts-compathandlers": [
      "artifacts.common.compat.HaemaCompat",
      "artifacts.common.compat.OriginsCompat"
    ],
    "modmenu": [
      "artifacts.client.integrations.ModMenuConfig"
    ],
    "cardinal-components": [
      "artifacts.common.init.Components"
    ],
    "rei_plugins": [
      "artifacts.client.integrations.REIPlugin"
    ],
    "dynamiclights": [
      "artifacts.client.integrations.DynamicLightPlugin"
    ]
  },
  "mixins": [
    "artifacts.mixins.json"
  ],
  "accessWidener": "artifacts.accesswidener",

  "depends": {
    "minecraft": ">=1.18.2",
    "fabricloader": ">=0.7.0",
    "fabric": ">=0.48.0",
    "trinkets": ">=3.0.0",
    "expandability": ">=6.0.0",
    "terrablender": ">=1.1.0.0",
    "cardinal-components-base": ">=4.0.0",
    "cardinal-components-entity": ">=4.0.0",
    "cloth-config2": ">=6.0",
    "step-height-entity-attribute": "*",
    "reach-entity-attributes": ">=2.0.0",
    "fabricshieldlib": ">=1.5.0"
  },
  "suggests": {
    "modmenu": "*"
  },
  "breaks": {
    "origins": "<=1.0.0"
  },

  "custom": {
    "cardinal-components": [
      "artifacts:dropped_item_entity",
      "artifacts:entity_kill_tracker",
      "artifacts:swim_abilities",
      "artifacts:mana_handler",
      "artifacts:dps_meter_damage"
    ]
  }
}